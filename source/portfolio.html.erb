<h2>Mobile Apps</h2>

<% data.mobile_apps.each do |app| %>
  <!-- App row -->
  <div class="uk-grid project">
    <div class="uk-width-medium-2-10 uk-width-3-10 icon">
      <img src="<%= app.image %>" width="100px;"/>
    </div>
    <div class="uk-width-medium-8-10 uk-width-7-10">
      <div class="title"><%= app.title %></div>
      <div class="description"><%= app.description %></div>
      <% if app.android %>
        <button class="uk-button download-button" type="button"><a href="<%= app.android %>">Android</a></button>
      <% end %>
      <% if app.ios %>
        <button class="uk-button download-button" type="button"><a href="<%= app.ios %>">iOS</a></button>
      <% end %>
      <% if app.blackberry %>
        <button class="uk-button download-button" type="button"><a href="<%= app.blackberry %>">BlackBerry</a></button>
      <% end %>
    </div>
  </div>
<% end %>

