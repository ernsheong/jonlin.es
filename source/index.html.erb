<div class="uk-container-center uk-width-medium-4-6">
  <% blog.articles[0...10].each do |article| %>
    <div class="article-preview">
      <h1 class="title"><%= link_to article.title, article %></h1>
      <div class="date"><%= article.date.strftime('%b %e, %Y') %></div>

      <div class="text">
        <%= article.summary %>
      </div>

      <div class="continue">
        <%= link_to "Continue reading...", article %>
      </div>
    </div>
  <% end %>
</div>
