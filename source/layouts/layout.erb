<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="description" content="Jonathan Lin Ern Sheong's Personal Website">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Jonathan ES Lin" %></title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/favicon.png" >

    <!-- Font Awesome via CDN -->
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400italic,700,400' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600,400' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "uikit.almost-flat.min", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial :header %>

    <div class="uk-container uk-container-center">
      <div class="uk-container-center uk-width-large-4-6 page-container">
        <%= yield %>
        <%= partial :footer %>
      </div>
    </div>
  </body>
</html>
