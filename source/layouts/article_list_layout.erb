<% wrap_layout :layout do %>
  <%= yield_content :top %>

  <% page_articles.each do |article| %>
    <div class="article-preview">
      <h1 class="title"><%= link_to article.title, article %></h1>
      <div class="date"><%= article.date.strftime('%b %e, %Y') %></div>

      <div class="text">
        <%= article.summary %>
      </div>

      <div class="continue">
        <%= link_to "Continue reading â‰«", article %>
      </div>
    </div>
  <% end %>

  <div class="archive-link uk-text-center"><%= link_to "Blog Archive", "/blog" %></div>
<% end %>
