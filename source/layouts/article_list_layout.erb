<% wrap_layout :layout do %>
  <%= yield_content :top %>

  <% page_articles.each_with_index do |article, idx| %>
    <div class="article-preview <%= idx == 0 ? '' : 'mt-8' %> pb-8 border-b">
      <h1 class="title hover:underline"><%= link_to article.title, article %></h1>
      <div class="date"><%= article.date.strftime('%b %e, %Y') %></div>

      <div class="text">
        <%= article.summary %>
      </div>

      <div class="continue">
        <%= link_to "Continue reading â‰«", article %>
      </div>
    </div>
  <% end %>

  <div class="mt-12 text-center"><%= link_to "Blog Archive", "/blog" %></div>
<% end %>
